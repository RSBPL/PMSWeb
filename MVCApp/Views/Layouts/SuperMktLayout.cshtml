
@model MVCApp.Models.LayoutSuperMktSubList
<style>
    .ul1 {
        -moz-column-count: 4;
        /*-moz-column-gap: 20px;*/
        -webkit-column-count: 4;
        /*-webkit-column-gap: 20px;*/
        column-count: 4;
        /*column-gap: 20px;*/
        list-style-type: none;
        padding: 6px;
        height: 450px;
        overflow-x: scroll;
        margin-left: -15px;
    }
    /* === BASE HEADING === */

    h1 {
        position: relative;
        padding: 0;
        margin: 0;
        font-family: "Raleway", sans-serif;
        font-weight: 300;
        font-size: 15px;
        color: #080808;
        -webkit-transition: all 0.4s ease 0s;
        -o-transition: all 0.4s ease 0s;
        transition: all 0.4s ease 0s;
    }

        h1 span {
            display: block;
            font-size: 0.5em;
            line-height: 1.3;
        }

        h1 em {
            font-style: normal;
            font-weight: 600;
        }

    /* === HEADING STYLE #1 === */
    hr {
        border: 0;
        margin: 1px 0 90px 0;
        max-width: 100%;
        background-position: 50%;
        box-sizing: border-box;
    }

    .head-10 {
        text-align: right;
        color: white;
        font-size: 20px;
        width: 660px;
    }

    .accessory {
        height: 20px;
        background-image: radial-gradient( closest-side, hsl(9deg 60% 55%), hsl(0deg 100% 48% / 0%) 100%);
        position: relative;
    }

        .accessory:after {
            position: absolute;
            top: 50%;
            left: 50%;
            display: block;
            background-color: hsl(0, 0%, 75%);
            height: 12px;
            width: 12px;
            transform: rotate(45deg);
            margin-top: -10px;
            margin-left: -10px;
            border-radius: 4px 0;
            border: 4px solid hsla(0, 0%, 100%, 0.35);
            background-clip: padding-box;
            box-shadow: -10px 10px 0 hsla(0, 0%, 100%, 0.15), 10px -10px 0 hsla(0, 0%, 100%, 0.15);
        }
    .mt-50 {
        margin-top: -122px;
        width: 100px;
    }
    .mt {
        margin-top: 10px;
    }

    .baged {
        width: 788px;
        margin-left: 216px;
    }

    @@media (max-width: 1024px) {
        .one h1:before {
            width: 200PX;
            margin-left: -75px;
        }
    }

    @@media (max-width: 1024px) {
        .ul1 {
            margin: 0 40px 0 0;
        }
    }

    @@media (max-width: 1024px) {
        .one h1:after {
            width: 420PX;
            margin-left: 0;
        }
    }

    @@media (max-width: 1024px) {
        .baged {
            width: 589px;
            margin-left: 214px;
        }
    }

    .modal-header .close {
        font-size: 23px;
        border: 3px solid #000000;
        border-radius: 120px;
        width: 35px;
        background: red;
    }
    .btn-danger {
        BORDER-RADIUS: 10PX;
    }

    .btn-success {
        BORDER-RADIUS: 10PX;
    }

    .btn-secondary {
        BORDER-RADIUS: 10PX;
    }
    label {
        font-size: 16px;
        font-weight: 600;
    }
</style>
<fieldset class="the-fieldset">
    <legend class="the-legend text-center"><b>SEARCH SUPER MARKET</b></legend>
    <div class="row">
        <div class="col-md-1"></div>

        <div class="col-md-4">
            @Html.TextBoxFor(Model => Model.Search, new { placeholder = "SEARCH LOCATION OR ITEM CODE", @class = "form-control input-sm" })
        </div>
        <div class="col-md-3">
            <button type="button" id="Srchbtn" class="btn btn-success btn-sm"><i class="ace-icon fa fa-search bigger-110"></i>Search</button>
            <button class="btn btn-secondary btn-sm" type="reset" id="Clr"><i class="ace-icon fa fa-undo bigger-110"></i><strong>Reload</strong></button>

        </div>
        <div class="col-md-2" style="WIDTH:150px" ;>
            <label>CAPACITY</label>
            <div style="background-color: #75abef; float: right; color: white; BORDER: 2PX SOLID #080808; BORDER-RADIUS: 18PX; WIDTH: 36PX; height: 25px;"></div>
        </div>
        <div class="col-md-2" style="WIDTH:150px" ;>
            <label>QUANTITY</label>
            <div style="background-color: #0c0c0c; float: right; color: white; BORDER: 2PX SOLID #ffd710; BORDER-RADIUS: 18PX; WIDTH: 36PX; height: 25px; "></div>

        </div>
    </div>

</fieldset>
@{

    var Layout = ViewBag.Layout;


    if (Layout != null)
    {
        for (int i = 1; i <= Layout.Count; i++)
        {
            <div class="mt-50"><h1 class="head-10"><strong>SUPER MARKET STORAGE</strong></h1></div>
            <hr class="accessory">

            <ul class="ul1">
                @foreach (var C in Layout[i - 1].SuperMktLayoutMode)
                {
                    <li id="process-manager-table">
                        <div style="width:240px;margin-left:30px; margin-right:30px;">
                            <button type="button" class="btn-success" id="RackDetails" value="@C.PlantSuper/@C.FamilySuper/@C.LocationName/@C.QTY/SM" style="width: 230px; height: 35px;">
                                @if (!string.IsNullOrEmpty(@C.LocationName))
                                {
                                    <div style="float: left; margin-top: 2px; FONT-SIZE: 15px; FONT-WEIGHT: 600; ">@C.LocationName</div>
                                }
                                else
                                {
                                    <div style="float: left; FONT-WEIGHT: 600;">@C.QTY</div>
                                }

                                <div style="background-color: #454548; float: right; color: white; BORDER: 2PX SOLID #ffc907; BORDER-RADIUS: 18PX; WIDTH: 40PX;">@C.QTY</div>
                                <div style="background-color: #75abef; float: right; color: white; BORDER: 2PX SOLID #ffc907; BORDER-RADIUS: 18PX; WIDTH: 40PX;">@C.CAPACITY</div>
                            </button>
                        </div>
                    </li>
                }
            </ul>
        }

    }
}
