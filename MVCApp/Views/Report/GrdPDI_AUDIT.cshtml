<div class="container" style="width:100%!important">
    <style>
        .e-headercell {
            background-color: #14567e !important;
            color: white;
        }

        .e-summarycell {
            background-color: #8fbfdc !important;
        }
    </style>
    <div class="row">
        <div class="col-md-12">
            <div class="bg-primary" style="padding-top:5px; padding-left:5px;">
                <center>
                    <label style="color:white;">@ViewBag.heading</label>
                    <label style="color: white;padding-right: 10px;" class="pull-right"><strong>TOTAL RECORD : @ViewBag.Total </strong></label>
                </center>
            </div>
        </div>
    </div>
    <div class="table-responsive">
        @(Html.EJS().Grid("GrdPDI_AUDIT").DataSource((System.Data.DataTable)ViewBag.DataSource).
            Height("400").
            AllowPaging(true).
            PageSettings(Page => Page.PageSize(7)).
            AllowSelection(false).
            AllowResizing().
            AllowExcelExport().
            ToolbarClick("toolbarClick").
            AllowFiltering().
            AllowGrouping().
            AllowSorting().
            //AllowSorting().EnableColumnVirtualization().EnableVirtualization().
            Columns(col =>
            {
                col.Field("TSN").HeaderText("TSN").Width("120").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Center).Add();
                col.Field("IP_ADDRESS").HeaderText("IP ADDRESS").Width("140").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Center).Add();
                col.Field("PRINT_BY").HeaderText("PRINT BY").Width("140").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Center).Add();
                col.Field("SYS_NAME").HeaderText("SYS NAME").Width("140").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Center).Add();
                col.Field("PRINT_DATE").HeaderText("PRINT DATE").Width("140").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Center).Add();

            }).
            Toolbar(new List<string>() { "ExcelExport" }).
            Render())
        <script>
            function toolbarClick(args) {
                var gridObj = document.getElementById("GrdPDI_AUDIT").ej2_instances[0];
                gridObj.excelExport();
            }
        </script>
    </div>
</div>
<script src="@Url.Content("~/Scripts/ej2/ej2.min.js")"></script>

@Html.EJS().ScriptManager()












