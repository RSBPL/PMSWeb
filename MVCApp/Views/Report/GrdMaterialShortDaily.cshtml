<div class="container" style="width:100%!important">
    <style>
        .e-headercell {
            background-color: #14567e !important;
            color: white;
        }

        .e-summarycell {
            background-color: #8fbfdc !important;
        }
    </style>
    <div class="row">
        <div class="col-md-12">
            <div class="bg-primary" style="padding-top:5px; padding-left:5px;">
                <center>
                    <label style="color:white;">@ViewBag.heading</label>
                    <label style="color:white;">@ViewBag.Date</label>
                    <label style="color: white;padding-right: 10px;" class="pull-right"><strong>TOTAL RECORD : @ViewBag.Total </strong></label>
                </center>
            </div>
        </div>
    </div>
    <div class="table-responsive">
        @(Html.EJS().Grid("GrdMaterialShortDaily").DataSource((System.Data.DataTable)ViewBag.DataSource).
            //Height("400").
            AllowPaging(true).
            PageSettings(Page => Page.PageSize(15)).
            AllowSelection(false).
            AllowResizing().
            AllowExcelExport().
            ToolbarClick("toolbarClick").
            AllowFiltering().
            AllowGrouping().
            AllowSorting().
            Columns(col =>
            {
                col.Field("MRN_NO").HeaderText("MRN_NO").Width("100").Add();
                col.Field("VENDOR_NAME").HeaderText("VENDOR NAME").Width("100").Add();
                col.Field("ITEMCODE").HeaderText("ITEMCODE").Width("100").Add();
                col.Field("CREATEDDATE").HeaderText("CREATEDDATE").Width("120").Add();
                col.Field("ITEM_DESCRIPTION").HeaderText("DESCRIPTION").Width("250").Add();
                col.Field("QUANTITY").HeaderText("QUANTITY").Width("80").Add();
                col.Field("REJ_QTY").HeaderText("REJ QTY").Width("80").Add();

            }).
            Toolbar(new List<string>() { "ExcelExport" }).
            Render())
        <script>
            function toolbarClick(args) {
                var gridObj = document.getElementById("GrdMaterialShortDaily").ej2_instances[0];
                gridObj.excelExport();
            }
        </script>
    </div>
</div>
<script src="@Url.Content("~/Scripts/ej2/ej2.min.js")"></script>

@Html.EJS().ScriptManager()


