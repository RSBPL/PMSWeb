<div class="container" style="width:100%!important">
    <style>
        .e-headercell {
            background-color: #14567e !important;
            color: white;
        }

        .e-summarycell {
            background-color: #8fbfdc !important;
        }
    </style>
    <div class="row">
        <div class="col-md-12">
            <div class="bg-primary" style="padding-top:5px; padding-left:5px;">
                <Left>
                    <label style="color:white;">@ViewBag.heading</label>
                    <label style="color: white;padding-right: 10px;" class="pull-right"><strong>TOTAL RECORD : @ViewBag.Total </strong></label>
                </Left>
            </div>
        </div>
    </div>
    <div class="table-responsive">
        @(Html.EJS().Grid("GrdTOTShowLess").DataSource((System.Data.DataTable)ViewBag.DataSource).
            Height("400").
            AllowPaging(true).
            PageSettings(Page => Page.PageSize(20)).
            AllowSelection(false).
            AllowResizing().
            AllowExcelExport().
            ToolbarClick("toolbarClick").
            AllowFiltering().
            AllowGrouping().
            AllowSorting().
            //AllowSorting().EnableColumnVirtualization().EnableVirtualization().
            Columns(col =>
            {
                col.Field("FCODE").HeaderText("FCODE").Width("120").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Center).Add();
                col.Field("OIL QTY").HeaderText("OIL QTY").Add();
                col.Field("DESCRIPTION").HeaderText("DESCRIPTION").Add();
                col.Field("JOB").HeaderText("JOB").Add();
                col.Field("BUCKLE UP DATE").HeaderText("BUCKLE UP DATE").Add();
                col.Field("BACKEND").HeaderText("BACKEND").Add();

                col.Field("ENGINE").HeaderText("ENGINE").Add();
                col.Field("TRACTOR_NO").HeaderText("TRACTOR_NO").Add();
                col.Field("HYDRAULIC_LIFT").HeaderText("HYDRAULIC_LIFT").Add();

                col.Field("SIM_SERIAL_NO").HeaderText("SIM_SERIAL_NO").Add();
                col.Field("IMEI_NO").HeaderText("IMEI_NO").Add();
                col.Field("MOBILE").HeaderText("MOBILE").Add();
                col.Field("ROPS_SRNO").HeaderText("ROPS_SRNO").Add();

                col.Field("BATTERY_SRLNO").HeaderText("BATTERY_SRLNO").Add();

                col.Field("BATTERY_MAKE").HeaderText("BATTERY_MAKE").Add();
                col.Field("ROLL OUT DATE").HeaderText("ROLL OUT DATE").Add();
                col.Field("PDI OK DATE").HeaderText("PDI OK DATE").Add();
                col.Field("PDI TACK TIME").HeaderText("PDI TACK TIME").Add();
                col.Field("FIPSRNO").HeaderText("FIPSRNO").Add();
                col.Field("ECU_SRNO").HeaderText("ECU SRNO").Add();
            }).
            Toolbar(new List<string>() { "ExcelExport" }).
            Render())
        <script>
            function toolbarClick(args) {
                var gridObj = document.getElementById("GrdTOTShowLess").ej2_instances[0];
                gridObj.excelExport();
            }
        </script>
    </div>
</div>
<script src="@Url.Content("~/Scripts/ej2/ej2.min.js")"></script>

@Html.EJS().ScriptManager()











