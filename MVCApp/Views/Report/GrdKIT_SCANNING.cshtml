<div class="container" style="width:100%!important">
    <style>
        .e-headercell {
            background-color: #14567e !important;
            color: white;
        }

        .e-summarycell {
            background-color: #8fbfdc !important;
        }
    </style>
    <div class="row">
        <div class="col-md-12">
            <div class="bg-primary" style="padding-top:5px; padding-left:5px;">
                <center>
                    <label style="color:white;">@ViewBag.heading</label>
                    <label style="color: white;padding-right: 10px;" class="pull-right"><strong>TOTAL RECORD : @ViewBag.Total </strong></label>
                </center>
            </div>
        </div>
    </div>
    <div class="table-responsive">
        @(Html.EJS().Grid("GrdKIT_SCANNING").DataSource((System.Data.DataTable)ViewBag.DataSource).
            //Height("400").
            AllowPaging(true).
            PageSettings(Page => Page.PageSize(10)).
            AllowSelection(false).
            AllowResizing().
            AllowExcelExport().
            ToolbarClick("toolbarClick").
            AllowFiltering().
            AllowGrouping().
            AllowSorting().
            //AllowSorting().EnableColumnVirtualization().EnableVirtualization().
            Columns(col =>
            {
                col.Field("PLANT_CODE").HeaderText("PLANT").Width("120").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Center).Add();
                col.Field("FAMILY_CODE").HeaderText("FAMILY").Width("140").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Center).Add();
                col.Field("KITNO").HeaderText("KIT NO").Width("140").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Center).Add();
                col.Field("LOCATION_CODE").HeaderText("LOCATION").Width("140").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Center).Add();
                col.Field("ITEMCODE").HeaderText("ITEM CODE").Width("140").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Center).Add();
                col.Field("QTY").HeaderText("QUANTITY").Width("120").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Center).Add();
                col.Field("CREATEDBY").HeaderText("CREATED BY").Width("130").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Center).Add();
                col.Field("CREATEDDATE").HeaderText("CREATED DATE").Width("180").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Center).Add();
                col.Field("SERIES_NO").HeaderText("SERIES NO").Width("140").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Center).Add();
                col.Field("CHALLAN_NO").HeaderText("CHALLAN NO").Width("140").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Center).Add();
                col.Field("CHALLAN_DATE").HeaderText("CHALLAN DATE").Width("160").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Center).Add();

            }).
            Toolbar(new List<string>() { "ExcelExport" }).
            Render())
        <script>
            function toolbarClick(args) {
                var gridObj = document.getElementById("GrdKIT_SCANNING").ej2_instances[0];
                gridObj.excelExport();
            }
        </script>
    </div>
</div>
<script src="@Url.Content("~/Scripts/ej2/ej2.min.js")"></script>

@Html.EJS().ScriptManager()













