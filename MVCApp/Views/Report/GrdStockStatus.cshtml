<div class="container" style="width:100%!important">
    <style>
        .e-headercell {
            background-color: #14567e !important;
            color: white;
        }

        .e-summarycell {
            background-color: #8fbfdc !important;
        }
    </style>
    <div class="row">
        <div class="col-md-12">
            <div class="bg-primary" style="padding-top:5px; padding-left:5px;">
                <center>
                    <label style="color:white;">@ViewBag.heading</label>
                    <label style="color: white;padding-right: 10px;" class="pull-right"><strong>TOTAL RECORD : @ViewBag.Total </strong></label>
                </center>
            </div>
        </div>
    </div>
    <div class="table-responsive">
        @(Html.EJS().Grid("GrdStockStatus").DataSource((System.Data.DataTable)ViewBag.DataSource).
            //Height("400").
            AllowPaging(true).
            PageSettings(Page => Page.PageSize(15)).
            AllowSelection(false).
            AllowResizing().
            AllowExcelExport().
            ToolbarClick("toolbarClick").
            AllowFiltering().
            AllowGrouping().
            AllowSorting().
            Columns(col =>
            {
                col.Field("ITEM_CODE").HeaderText("ITEM CODE").Width("100").Add();
                col.Field("DESCRIPTION").HeaderText("DESCRIPTION").Width("300").Add();
                col.Field("ONHAND").HeaderText("ONHAND").Width("100").Add();
                col.Field("STOCK_AT_RECEIVING").HeaderText("RECEIVING").Width("100").Add();
                col.Field("STOCK_BULKSTORE_MAIN").HeaderText("BULKSTORE(MAIN)").Width("130").Add();
                col.Field("STOCK_BULKSTORE_TEMP").HeaderText("BULKSTORE(TEMP)").Width("130").Add();
                col.Field("STOCK_SUPER_MKT").HeaderText("SUPER MKT").Width("120").Add();
                
                


            }).
            Toolbar(new List<string>() { "ExcelExport" }).
            Render())
        <script>
            function toolbarClick(args) {
                var gridObj = document.getElementById("GrdStockStatus").ej2_instances[0];
                gridObj.excelExport();
            }
        </script>
    </div>
</div>
<script src="@Url.Content("~/Scripts/ej2/ej2.min.js")"></script>

@Html.EJS().ScriptManager()


