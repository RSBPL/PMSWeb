<div class="container" style="width:100%!important">
    <style>
        .e-headercell {
            background-color: #14567e !important;
            color: white;
        }

        .e-summarycell {
            background-color: #8fbfdc !important;
        }
    </style>
    <div class="row">
        <div class="col-md-12">
            <div class="bg-primary" style="padding-top:5px; padding-left:5px;">
                <center>
                    <label style="color:white;">@ViewBag.heading</label>
                    <label style="color: white;padding-right: 10px;" class="pull-right"><strong>TOTAL RECORD : @ViewBag.Total </strong></label>
                </center>
            </div>
        </div>
    </div>
    <div class="table-responsive">
        @(Html.EJS().Grid("GrdPRDBACKEND_T04").DataSource((System.Data.DataTable)ViewBag.DataSource).
            Height("400").
            AllowPaging(true).
            PageSettings(Page => Page.PageSize(20)).
            AllowSelection(false).
            AllowResizing().
            AllowExcelExport().
            ToolbarClick("toolbarClick").
            AllowFiltering().
            AllowGrouping().
             AllowSorting().
            //AllowSorting().EnableColumnVirtualization().EnableVirtualization().
            Columns(col =>
            {
                col.Field("BACKEND").HeaderText("BACKEND").Width("140").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Center).Add();
                col.Field("DESCRIPTION").HeaderText("DESCRIPTION").Add();
                col.Field("TRANSMISSION").HeaderText("TRANSMISSION").Add();
                col.Field("TRANSMISSION_SRLNO").HeaderText("TRANSMISSION SRLNO").Add();
                col.Field("REARAXEL").HeaderText("REARAXEL").Add();
                col.Field("REARAXEL_SRLNO").HeaderText("REARAXEL SRLNO").Add();
                col.Field("HYDRAULIC").HeaderText("HYDRAULIC").Add();
                col.Field("HYDRAULIC_SRLNO").HeaderText("HYDRAULIC SRLNO").Add();
                col.Field("BACKEND_SRLNO").HeaderText("BACKEND SRLNO").Add();
                col.Field("CREATEDBY").HeaderText("CREATED BY").Add();
                col.Field("CREATEDDATE").HeaderText("CREATED DATE").Add();
                col.Field("JOBID").HeaderText("JOBID").Add();
            }).
            Toolbar(new List<string>() { "ExcelExport" }).
            Render())
        <script>
            function toolbarClick(args) {
                var gridObj = document.getElementById("GrdPRDBACKEND_T04").ej2_instances[0];
                gridObj.excelExport();
            }
        </script>
    </div>
</div>
<script src="@Url.Content("~/Scripts/ej2/ej2.min.js")"></script>

@Html.EJS().ScriptManager()







