<script type="text/javascript">
    $(document).ready(function () {
        checkinfo();
    });
    var refresh = '@System.Configuration.ConfigurationManager.AppSettings["pagerefresh"].ToString()';
    window.onload = function () {
        setInterval(function () {
            checkinfo();
        }, refresh*1000);
    };

    function checkinfo() {
            var Data = $('#PlantCode').val();
            if (Data != null && Data != undefined && Data != "") {
            $.ajax({
            url: '@Url.Action("getPlanVertical", "RearHoodDisplay")',
            data: { PLANTCODE: Data },
            type: "GET",
            contentType: "application/json;charset=UTF-8",
                success: function (result) {
                    Setlblvalue(result);
            },
                error: function (errormessage) {
                //alert(errormessage.responseText);
                }
            });
            }

        }
    function Setlblvalue(data) {

        if (data.tdError == true) {
            $("#tdError").show();
            $("#lblErrordb").text(data.lblErrordb);
        } else {
            $("#tdError").hide();
        }

        $("#lblDate").text(data.lblDate);
        $("#lblTime").text(data.lblTime);
        $("#lblShift").text(data.lblShift);
        $("#lblProductionUnit").text(data.lblProductionUnit);
        $("#lblPlanQty").text(data.lblPlanQty);
        $("#lblPending").text(data.lblPending);
        $("#lblBKTotDay").text(data.lblBKTotDay);
        $("#lblPlanQty").text(data.lblPlanQty);
        $("#lblBK").text(data.lblBK);
        $("#lblPending").text(data.lblPending);
        $("#lblBKTotDay").text(data.lblBKTotDay);
        $("#lblSftotDay").text(data.lblSftotDay);
        $('#tbldetail tbody').html('');
        for (var i = 0; i < data.PTtabls.length; i++) {
            var rawCode = i;
            var tr;
            if (data.PTtabls[i].PENDING > 0) {
              tr=  "<tr id='" + data.PTtabls[i] + "'>";
            }
            else {
                tr = "<tr  id='" + data.PTtabls[i] + "'>";
            }
            var row = $(tr);
            $("#tbldetail").append(row);

            row.append("<td>" + data.PTtabls[i].SRNO + "</td>");

            row.append("<td><span id='FCODE" + rawCode + "'>" + data.PTtabls[i].FCODE + "</span></td>");
            row.append("<td><span id='SHORTNAME" + rawCode + "'>" + data.PTtabls[i].SHORTNAME + "</span></td>");
            row.append("<td><span id='QTY" + rawCode + "'>" + data.PTtabls[i].QTY + "</span></td>");
            row.append("<td><span id='HOOK" + rawCode + "'>" + data.PTtabls[i].HOOK + "</span></td>");
            row.append("<td><span id='REAR_HOOD" + rawCode + "'>" + data.PTtabls[i].REAR_HOOD + "</span></td>");
            row.append("<td><span id='CLUSTER_METER" + rawCode + "'>" + data.PTtabls[i].CLUSTER_METER + "</span></td>");
            row.append("<td><span id='IP_HARNESS" + rawCode + "'>" + data.PTtabls[i].IP_HARNESS + "</span></td>");
            row.append("<td><span id='RADIATOR_SHELL" + rawCode + "'>" + data.PTtabls[i].RADIATOR_SHELL + "</span></td>");
            row.append("<td><span id='AIR_CLEANER" + rawCode + "'>" + data.PTtabls[i].AIR_CLEANER + "</span></td>");
            row.append("<td><span id='HEAD_LAMP_LH" + rawCode + "'>" + data.PTtabls[i].HEAD_LAMP_LH + "</span></td>");
            row.append("<td><span id='HEAD_LAMP_RH" + rawCode + "'>" + data.PTtabls[i].HEAD_LAMP_RH + "</span></td>");
            //row.append("<td><span id='PLANNED" + rawCode + "'>" + data.PTtabls[i].PLANNED + "</span></td>");
            //row.append("<td><span id='DONE" + rawCode + "'>" + data.PTtabls[i].DONE + "</span></td>");
            //row.append("<td><span id='PENDING" + rawCode + "'>" + data.PTtabls[i].PENDING + "</span></td>");
        }
        //debugger;
        //GetTaskComplete(result);
    }

