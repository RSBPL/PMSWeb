<script type="text/javascript">
    $(document).ready(function () {
        checkinfo();
    });
    var refresh = '@System.Configuration.ConfigurationManager.AppSettings["pagerefresh"].ToString()';
    window.onload = function () {
        setInterval(function () {
            checkinfo();
        }, refresh*1000);
    };

    function checkinfo() {
            var Data = $('#PlantCode').val();
            if (Data != null && Data != undefined && Data != "") {
            $.ajax({
            url: '@Url.Action("getPlanVertical", "TractorLoading")',
            data: { PLANTCODE: Data },
            type: "GET",
            contentType: "application/json;charset=UTF-8",
                success: function (result) {
                    Setlblvalue(result);
            },
                error: function (errormessage) {
                //alert(errormessage.responseText);
                }
            });
            }

        }
    function Setlblvalue(data) {

        if (data.tdError == true) {
            $("#tdError").show();
            $("#lblErrordb").text(data.lblErrordb);
        } else {
            $("#tdError").hide();
        }

        $("#lblDate").text(data.lblDate);
        $("#lblTime").text(data.lblTime);
        $("#lblShift").text(data.lblShift);
        $("#lblProductionUnit").text(data.lblProductionUnit);
        $("#lblPlanQty").text(data.lblPlanQty);
        $("#lblPending").text(data.lblPending);
        $("#lblBKTotDay").text(data.lblBKTotDay);
        $("#lblPlanQty").text(data.lblPlanQty);
        $("#lblBK").text(data.lblBK);
        $("#lblPending").text(data.lblPending);
        $("#lblSftotDay").text(data.lblSftotDay);
        $('#tbldetail tbody').html('');
        for (var i = 0; i < data.SentData.length; i++) {
          //  alert(data.SentData[i].BackColor);
            var rawCode = i;
            var tr;
            if (data.SentData[i].PENDING == 0) {
                tr = "<tr style='background-color:lawngreen;' id='" + data.SentData[i] + "'>";
            }

            else if (data.SentData[i].BackColor == "Yellow") {

                tr = "<tr style='background-color:Yellow;' id='" + data.SentData[i] + "'>";

            }
            else {
                tr = "<tr  id='" + data.SentData[i] + "'>";
            }

            var row = $(tr);
            $("#tbldetail").append(row);

            row.append("<td>" + data.SentData[i].SRNO + "</td>").addClass("td1");
            row.append("<td><span id='JOBID" + rawCode + "'>" + data.SentData[i].JOBID + "</span></td>").addClass("td1");
            row.append("<td><span id='FCODE" + rawCode + "'>" + data.SentData[i].FCODE + "</span></td>").addClass("td1");
            row.append("<td><span id='SHORT_CODE" + rawCode + "'>" + data.SentData[i].SHORT_CODE + "</span></td>").addClass("td1");
            row.append("<td><span id='ENGINE" + rawCode + "'>" + data.SentData[i].ENGINE + "</span></td>").addClass("td1");
            row.append("<td><span id='ENGINE_DESCRIPTION" + rawCode + "'>" + data.SentData[i].ENGINE_DESCRIPTION + "</span></td>").addClass("td1");
        }
        //debugger;
        //GetTaskComplete(result);
    }




</script>



