@model MVCApp.Models.ChangePassword
<style>

    .body-1 {
        background: aliceblue;
        height: 83vh;
    }

    #login .container #login-row #login-column .login-box {
        margin-top: 80px;
        margin-bottom: 89px;
        max-width: 360px;
        height: 432px;
        border: 1px solid #9C9C9C;
        background-image: linear-gradient(to bottom, #606e6f7a, #606e6f7a, #606e6f7a, #606e6f7a, #606e6f7a);
    }

    #login .container #login-row #login-column .login-box #login-form {
        padding: 20px;
    }

    #login .container #login-row #login-column .login-box #login-form #register-link {
        margin-top: -85px;
    }
    .text-info {
        color: #ffffff;
    }
    .sbmtbtn {
        width: 134px;
        float: right;
    }
    .ml-73 {
        margin-left: 73px;
    }
    .mr-97 {
        margin-right: -97px;
    }
</style>


<div class="page-content">
    <div class="container" style="width:100%!important">
        <div id="alert"></div>
    </div>
    @*--------Form------------*@
<div class="container body-1" style="width:100%!important">
    @using (Html.BeginForm())
    {
    <div style="width:100%;">
        @if (ViewBag.msg != null)
        {
            <div class="alert alert-success">
                <strong>@ViewBag.msg</strong>
            </div>
        }

    </div>
        @Html.AntiForgeryToken()
        <div id="login">
            <div class="container">
                <div id="login-row" class="row justify-content-center align-items-center">
                    <div id="login-column" class="col-md-12">
                        <div class="col-md-4"></div>
                        <div class="login-box col-md-6">
                            <div id="login-form" class="form">
                                <h3 class="text-center text-info">Change Password</h3>
                                <div class="form-group">
                                    <label class="text-info">Current Password:</label><br>
                                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", @autocomplete = "off" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                                </div>
                                <div class="form-group">
                                    <label class="text-info">New Password:</label><br>
                                    @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control", @autocomplete = "off" })
                                    @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })

                                </div>
                                <div class="form-group">
                                    <label class="text-info">Confirm Password:</label><br>
                                    @Html.PasswordFor(model => model.ConfirmNewPassword, new { @class = "form-control", @autocomplete = "off" })
                                    @Html.ValidationMessageFor(m => m.ConfirmNewPassword, "", new { @class = "text-danger" })

                                </div>
                               
                                <div class="col-md-6 form-group ml-73">
                                    <div class="col-md-6">
                                        <input type="submit" name="submit" class="btn btn-success btn-md sbmtbtn" value="Update">
                                    </div>
                                    <div class="col-md-6">
                                        <input type="button" name="Clear" id="Clear" class="btn btn-warning btn-md sbmtbtn mr-97" value="Clear">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4"></div>
                    </div>
                </div>
            </div>
        </div>
 
    }

</div>
</div>

<script src="@Url.Content("~/assets/js/jquery-2.1.4.min.js")"></script>
<script src="@Url.Content("~/Scripts/ej2/ej2.min.js")"></script>


<script>

    $(document).ready(function () {
        
    });

   
    $("#Clear").on("click", function () {
        $("#Password").val("");
        $("#NewPassword").val("");
        $("#ConfirmNewPassword").val("");
        @*window.location.href = "@Url.Content("~/ChangePassword")";*@
        //location.reload(true);
    });




</script>


