<script type="text/javascript">
    $(document).ready(function () {
        checkinfo();
    });
    var refresh = '@System.Configuration.ConfigurationManager.AppSettings["pagerefresh"].ToString()';
    window.onload = function () {
        setInterval(function () {

            checkinfo();
        }, refresh * 1000);
    };
    var gridstart = 0;
    var j = 0;
    function checkinfo() {
            $.ajax({
                url: '@Url.Action("getPlanVertical", "MRNLcd")',
                //data: { PLANTCODE: Data },
                //data: "{PLANTCODE:'" + Data + "'}", //  
                //JSON.stringify(Data),
                type: "GET",
                contentType: "application/json;charset=UTF-8",
                success: function (result) {
                    Setlblvalue(result);
                },
                error: function (errormessage) {
                    //alert(errormessage.responseText);
                }
            });
        j++;
    }
    function Setlblvalue(data) {

        if (data.tdError == true) {
            $("#tdError").show();
            $("#lblErrordb").text(data.lblErrordb);
        } else {
            $("#tdError").hide();
        }

        $("#lblDate").text(data.lblDate);
        $("#lblTime").text(data.lblTime);
        /*$("#lblShift").text(data.lblShift);*/
        /*$("#lblProductionUnit").text(data.lblProductionUnit);*/
        /*$("#lblPlanQty").text(data.lblPlanQty);*/
        /*$("#lblPending").text(data.lblPending);*/
        /*$("#lblBKTotDay").text(data.lblBKTotDay);*/
        
       /* $("#lblBK").text(data.lblBK);*/
        
        
        $('#tbldetail tbody').html('');
        if (j < 2) {
            gridstart = 0;

        }
        if (gridstart > data.gridleft.length - 1) {
            gridstart = 0;
        }


        for (var i = 0; i < 17; i++) {
            var rawCode = gridstart;
            var tr;
            if (data.gridleft[gridstart].PENDING == 0) {
                tr = "<tr style='background-color:lawngreen;' id='" + data.gridleft[gridstart] + "'>";
            }

            else if (data.gridleft[i].BackColor == "Yellow") {

                tr = "<tr style='background-color:Yellow;' id='" + data.gridleft[gridstart] + "'>";

            }
            else {
                tr = "<tr  id='" + data.gridleft[gridstart] + "'>";
            }
            var row = $(tr);
            $("#tbldetail").append(row);
            row.append("<td>" + data.gridleft[gridstart].SRNO + "</td>").addClass("td1");
            row.append("<td><span id='VEHICLENUMBER" + rawCode + "'>" + data.gridleft[gridstart].VEHICLENUMBER + "</span></td>").addClass("td1");
            row.append("<td><span id='VENDOR_NAME" + rawCode + "'>" + data.gridleft[gridstart].VENDOR_NAME + "</span></td>").addClass("td1");
            row.append("<td><span id='TOTAL" + rawCode + "'>" + data.gridleft[gridstart].TOTAL + "</span></td>").addClass("td1");
            /*row.append("<td><span id='STATUS" + rawCode + "'>" + data.gridleft[gridstart].STATUS + "</span></td>").addClass("td1");*/
            gridstart++;
            
        }
        //debugger;
        //GetTaskComplete(result);
    }
   


</script>



