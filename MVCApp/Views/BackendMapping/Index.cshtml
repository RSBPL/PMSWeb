<script>
    var PREFIX1;
    var PREFIX2;
    var SUFFIX1;
    var SUFFIX2;
    var REMARKS1;
    $(document).ready(function () {
        DDLPlant();
        $('#Update').hide();

    });
    $("#PLANT_CODE").on("change", function () {
        DDLFamilyByPlant();
        
    });
    $("#FAMILY_CODE").on("change", function () {
        DDLBackendbyFamilyPlant();
        BindGrid();

    });
    $("#BACKEND").on("change", function () {
        BindGrid();

    });
    function DDLPlant() {
        $.ajax({
            url: '@Url.Action("BindPlant", "BackendMapping")',
            type: "POST",
            contentType: "application/json;charset=UTF-8",
            success: function (result) {
                $("#PLANT_CODE").html(result);
                DDLFamilyByPlant();
        },
            error: function (errormessage) {
            //alert(errormessage.responseText);
            }
        });
    };
    function DDLFamilyByPlant() {
        var selectedValue = $("#PLANT_CODE").val();
        $.ajax({
            url: '@Url.Action("BindFamily", "BackendMapping")',
            type: "POST",
            contentType: "application/json;charset=UTF-8",
            data: JSON.stringify({ Plant: selectedValue }),
            success: function (result) {
                $("#FAMILY_CODE").html(null);
                $("#FAMILY_CODE").html(result);
                DDLBackendbyFamilyPlant();
        },
            error: function (errormessage) {
            //alert(errormessage.responseText);
            }
        });
    };
    function DDLBackendbyFamilyPlant() {
        var obj = {
            PLANT_CODE: $("#PLANT_CODE").val(),
            FAMILY_CODE: $("#FAMILY_CODE").val()
        }
        $.ajax({
            url: '@Url.Action("BindBackend", "BackendMapping")',
            type: "POST",
            contentType: "application/json;charset=UTF-8",
            data: JSON.stringify( obj ),
            success: function (result) {
                $("#BACKEND").html(null);
                $("#BACKEND").html(result);
                DDLHydraulicbyFamilyPlant();
            },
            error: function (errormessage) {
            //alert(errormessage.responseText);
            }
        });
    };
    function DDLHydraulicbyFamilyPlant() {
        var obj = {
            PLANT_CODE: $("#PLANT_CODE").val(),
            FAMILY_CODE: $("#FAMILY_CODE").val()
        }
        $.ajax({
            url: '@Url.Action("BindHydraulic", "BackendMapping")',
            type: "POST",
            contentType: "application/json;charset=UTF-8",
            data: JSON.stringify(obj),
            success: function (result) {
                $("#HYDRAULIC").html(null);
                $("#HYDRAULIC").html(result);
                DDLTransmissionbyFamilyPlant();

        },
            error: function (errormessage) {
            //alert(errormessage.responseText);
            }
        });
    };
    function DDLTransmissionbyFamilyPlant() {
        var obj = {
            PLANT_CODE: $("#PLANT_CODE").val(),
            FAMILY_CODE: $("#FAMILY_CODE").val()
        }
        $.ajax({
            url: '@Url.Action("BindTransmission", "BackendMapping")',
            type: "POST",
            contentType: "application/json;charset=UTF-8",
            data: JSON.stringify(obj),
            success: function (result) {
                $("#TRANSMISSION").html(null);
                $("#TRANSMISSION").html(result);
                DDLRearAxelbyFamilyPlant();

        },
            error: function (errormessage) {
            //alert(errormessage.responseText);
            }
        });
    };
    function DDLRearAxelbyFamilyPlant() {
        var obj = {
            PLANT_CODE : $("#PLANT_CODE").val(),
            FAMILY_CODE : $("#FAMILY_CODE").val()
        }

        $.ajax({
            url: '@Url.Action("BindRearAxel", "BackendMapping")',
            type: "POST",
            contentType: "application/json;charset=UTF-8",
            data: JSON.stringify(obj),
            success: function (result) {
                $("#REARAXEL").html(null);
                $("#REARAXEL").html(result);
                //DDLEnginebyplantfamily();
                BindGrid();
        },
            error: function (errormessage) {
            //alert(errormessage.responseText);
            }
        });
    };
    function BindGrid() {
        $("#divLoader").show();
        var Data = {
            PLANT_CODE: $('#PLANT_CODE').val(),
            FAMILY_CODE: $('#FAMILY_CODE').val(),
            //BACKEND: $('#BACKEND').val()

            //ITEM_CODE: $('#ITEM_CODE').val()
                };
        $.ajax({
            url: '@Url.Action("Grid", "BackendMapping")',
            data: JSON.stringify(Data),
            type: "POST",
            contentType: "application/json;charset=UTF-8",
            success: function (result) {
                $("#Grid").html(result);
                $("#divLoader").hide();
            },
            error: function (errormessage) {
            //alert(errormessage.responseText);
            }
        });
    };
    //Add
    $("#Add").on("click", function () {
        $("#divLoader").show();
        var data = {
            PLANT_CODE: $('#PLANT_CODE').val(),
            FAMILY_CODE: $('#FAMILY_CODE').val(),

            BACKEND: $('#BACKEND').val(),
            BACKEND_DESC: $('#BACKEND option:selected').text(),

            HYDRAULIC: $('#HYDRAULIC').val(),
            HYDRAULIC_DESC: $('#HYDRAULIC option:selected').text(),

            TRANSMISSION: $('#TRANSMISSION').val(),
            TRANSMISSION_DESC: $('#TRANSMISSION option:selected').text(),

            REARAXEL: $('#REARAXEL').val(),
            REARAXEL_DESC: $('#REARAXEL option:selected').text(),

            PREFIX1: $("#PREFIX1").val(),
            PREFIX2: $("#PREFIX2").val(),
            SUFFIX1: $("#SUFFIX1").val(),
            SUFFIX2: $("#SUFFIX2").val(),
            REMARKS1: $("#REMARKS1").val()
         };
        $.ajax({
            url: '@Url.Action("SaveBackendMaster", "BackendMapping")',
            data: JSON.stringify(data),
            type: "POST",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (data) {
                $("#divLoader").hide();
                BindGrid();
                //alert(data.validation);
                if (data.validation.includes("error")) {
                    $('#alert').append('<div class="alert ' + data.ID + '"role = "alert"><strong>' + data.Msg + '</strong><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></div>');
                    setTimeout(function () { $(".alert").alert('close'); }, 5000);
                }

                else {
                    $('#alert').append('<div class="alert ' + data.ID + '"role = "alert"><strong>' + data.Msg + '</strong><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></div>');
                    setTimeout(function () { $(".alert").alert('close'); }, 5000);
                   

                    $('#PLANT_CODE').val("");
                    $('#FAMILY_CODE').val("");
                    $('#BACKEND').val("");
                    $('#HYDRAULIC').val("");
                    $('#TRANSMISSION').val("");
                    $('#REARAXEL').val("");
                    $('#PREFIX1').val("");
                    $('#PREFIX2').val("");
                    $('#SUFFIX1').val("");
                    $('#SUFFIX2').val("");
                    $('#REMARKS1').val("");

                }

            },
            error: function (errormessage) {

            }
        });
    });

    //Update Data
    $("#Update").on("click", function () {
        $("#divLoader").show();
        var data = {
            AUTOID: AUTOID,
            PLANT_CODE: $('#PLANT_CODE').val(),
            FAMILY_CODE: $('#FAMILY_CODE').val(),

            BACKEND: $('#BACKEND').val(),
            BACKEND_DESC: $('#BACKEND option:selected').text(),

            HYDRAULIC: $('#HYDRAULIC').val(),
            HYDRAULIC_DESC: $('#HYDRAULIC option:selected').text(),

            TRANSMISSION: $('#TRANSMISSION').val(),
            TRANSMISSION_DESC: $('#TRANSMISSION option:selected').text(),

            REARAXEL: $('#REARAXEL').val(),
            REARAXEL_DESC: $('#REARAXEL option:selected').text(),

            PREFIX1: $('#PREFIX1').val(),
            PREFIX2: $('#PREFIX2').val(),
            SUFFIX1: $('#SUFFIX1').val(),
            SUFFIX2: $('#SUFFIX2').val(),
            REMARKS1: $('#REMARKS1').val()
        };
    $.ajax({
        url: '@Url.Action("Update", "BackendMapping")',
        data: JSON.stringify(data),
        type: "POST",
        contentType: "application/json;charset=utf-8",
        dataType: "json",
        success: function (data) {
            $("#divLoader").hide();
            BindGrid();
            if (data.validation.includes("error")) {
                $('#alert').append('<div class="alert ' + data.ID + '"role = "alert"><strong>' + data.Msg + '</strong><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></div>');
                setTimeout(function () { $(".alert").alert('close'); }, 5000);
            }

            else {

                $('#alert').append('<div class="alert ' + data.ID + '"role = "alert"><strong>' + data.Msg + '</strong><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></div>');
                setTimeout(function () { $(".alert").alert('close'); }, 5000);

                $('#PLANT_CODE').val("");
                $('#FAMILY_CODE').val("");
                $('#BACKEND').val("");
                $('#HYDRAULIC').val("");
                $('#TRANSMISSION').val("");
                $('#REARAXEL').val("");
                $('#PREFIX1').val("");
                $('#PREFIX2').val("");
                $('#SUFFIX1').val("");
                $('#SUFFIX2').val("");
                $('#REMARKS1').val("");

                    
                $('#Add').show();
                $('#Update').hide();
                $('#PLANT_CODE').prop('disabled', false);
                $('#FAMILY_CODE').prop('disabled', false);
                $('#BACKEND').prop('disabled', false);
                
            }

        },
        error: function (errormessage)
        {
        }
    });
});




