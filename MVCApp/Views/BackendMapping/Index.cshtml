                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="fname" class="col-md-1 text-left control-label col-form-label C-1"><strong>TRANSMISSION</strong></label>
                        <div class="input-group m-50">
                            <span class="input-group-addon" style="max-width: 100%;"><i class="fas fa-random"></i></span>
                            @Html.DropDownListFor(model => model.TRANSMISSION, Enumerable.Empty<SelectListItem>(), "----Select----", new { @class = "form-control  input-sm" })
