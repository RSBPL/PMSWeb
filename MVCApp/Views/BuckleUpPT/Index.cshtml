<script type="text/javascript">
    $(document).ready(function () {
        checkinfo();
    });
    var refresh = '@System.Configuration.ConfigurationManager.AppSettings["pagerefresh"].ToString()';
    window.onload = function () {
        setInterval(function () {
            checkinfo();
        }, refresh*1000);
    };

    function checkinfo() {
            $.ajax({
            url: '@Url.Action("getPlanVertical", "BuckleUpPT")',
            type: "POST",
            contentType: "application/json;charset=UTF-8",
                success: function (result) {

                    Setlblvalue(result);
                    SetlblvalueRight(result);


            },
                error: function (errormessage) {
                //alert(errormessage.responseText);
                }
            });

        }
    function Setlblvalue(data) {

        if (data.tdError == true) {
            $("#tdError").show();
            $("#lblErrordb").text(data.lblErrordb);
        } else {
            $("#tdError").hide();
        }

        $("#lblDate").text(data.lblDate);
        $("#lblTime").text(data.lblTime);
        $("#lblShift").text(data.lblShift);
        $("#lblProductionUnit").text(data.lblProductionUnit);
        $("#lblPlanQty").text(data.lblPlanQty);
        $("#lblPending").text(data.lblPending);
        $("#lblBKTotDay").text(data.lblBKTotDay);
        $("#lblPlanQty").text(data.lblPlanQty);
        $("#lblBK").text(data.lblBK);
        $("#lblPending").text(data.lblPending);
        $("#lblBKTotDay").text(data.lblBKTotDay);
        $('#tbldetail tbody').html('');
        for (var i = 0; i < data.gridleft.length; i++) {
            var rawCode = i;
            var tr;
            if (data.gridleft[i].PENDING == 0) {
                tr = "<tr style='background-color:lawngreen;' id='" + data.gridleft[i] + "'>";
            }

            else if (data.gridleft[i].BackColor == "Yellow") {

                tr = "<tr style='background-color:Yellow;' id='" + data.gridleft[i] + "'>";

            }
            else {
                tr = "<tr  id='" + data.gridleft[i] + "'>";
            }

            var row = $(tr);
            $("#tbldetail").append(row);
            row.append("<td>" + data.gridleft[i].SRNO + "</td>").addClass("td1");
            row.append("<td><span id='MODEL" + rawCode + "'>" + data.gridleft[i].MODEL + "</span></td>").addClass("td1");
            row.append("<td><span id='DESCRIPTION" + rawCode + "'>" + data.gridleft[i].DESCRIPTION + "</span></td>").addClass("td1");
            row.append("<td><span id='SHORTCODE" + rawCode + "'>" + data.gridleft[i].SHORTCODE + "</span></td>").addClass("td1");
            row.append("<td><span id='BACKEND" + rawCode + "'>" + data.gridleft[i].BACKEND + "</span></td>").addClass("td1");
            row.append("<td><span id='ENGINE" + rawCode + "'>" + data.gridleft[i].ENGINE + "</span></td>").addClass("td1");
            row.append("<td><span id='PLAN" + rawCode + "'>" + data.gridleft[i].PLAN + "</span></td>").addClass("td1");
            row.append("<td><span id='BUCKLEUP" + rawCode + "'>" + data.gridleft[i].BUCKLEUP + "</span></td>").addClass("td1");
            row.append("<td><span id='PENDING" + rawCode + "'>" + data.gridleft[i].PENDING + "</span></td>").addClass("td1");

        }
        //debugger;
        //GetTaskComplete(result);
    }
    function SetlblvalueRight(data) {
        if (data.tdError == true) {
            $("#tdError").show();
            $("#lblErrordb").text(data.lblErrordb);
        } else {
            $("#tdError").hide();
        }
        $('#tbldetailRight tbody').html('');
        for (var i = 0; i < data.gridright.length; i++) {

            var tr = "<tr id='" + data.gridright[i] + "'>";
            var tr = "<tr>";
            var row = $(tr);
            $("#tbldetailRight").append(row.addClass("tr1"));

            row.append("<td >" + data.gridright[i].MODEL + "</td>").addClass("td1");
            row.append("<td >" + data.gridright[i].JOB + "</td>").addClass("td1");
            row.append("<td >" + data.gridright[i].BACKEND + "</td>").addClass("td1");
            row.append("<td >" + data.gridright[i].ENGINE + "</td>").addClass("td1");
        }

    }



</script>

