@model MVCApp.Models.RoleModel

<div class="breadcrumbs ace-save-state" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="@Url.Action("Index", "Home")">Home</a>
        </li>
        <li>
            <a href="#">Maintenance</a>
        </li>

        <li class="active">
            Role
        </li>
    </ul>
</div>

<div class="page-content">
    <div class="container" style="width:100%!important">
        @if (TempData["msg"] != null && TempData["msgType"] != null)
        {
            <div class="alert @TempData["msgType"]" role="alert">
                <strong>@TempData["msg"]</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div style="margin-top:5px; margin-bottom:5px;">
            <a href="@Url.Action("Index", "RoleMaster")" class="btn btn-warning btn-sm"><i class="fa fa-arrow-left" aria-hidden="true"></i>&nbsp;Go Back</a>
        </div>
    </div>
    <div class="container" style="width:100%!important">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal form-group">
                <fieldset class="the-fieldset">
                    <legend class="the-legend"><b>Create Role</b></legend>
                    <div class="row">
                        <div class="col-md-2">
                            <div class="row">
                                <div class="col-md-12">
                                    <label for="fname" class="control-label col-form-label"><strong>Role</strong></label>                                  
                                </div>
                                <div class="col-md-12">
                                    @Html.TextBoxFor(model => model.Role, null, new { @class = "form-control input-sm", @autocomplete = "off" })
                                    <strong>@Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })</strong>
                                </div>
                            </div>
                        </div>
                        @*<div class="col-md-2">
                            <div class="row">
                                <div class="col-md-12">
                                    <label for="fname" class="text-right control-label col-form-label"><strong>Remark</strong></label>                                   
                                </div>
                                <div class="col-md-12">
                                    @Html.TextBoxFor(model => model.Remark, null, new { @class = "form-control input-sm", @autocomplete = "off" })
                                    <strong>@Html.ValidationMessageFor(model => model.Remark, "", new { @class = "text-danger" })</strong>
                                </div>
                            </div>
                        </div>*@
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-md-12">
                                    <label for="fname" class="text-right control-label col-form-label"><strong class="text-hide">Role Description</strong></label>
                                </div>
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-success btn-sm"><i class="ace-icon fa fa-check bigger-110"></i> Submit</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
        }
    </div>
</div>

